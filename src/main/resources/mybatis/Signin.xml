<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it.dao.SigninDAO">
    <resultMap type="com.it.entity.Signin" id="BaseResultMap">
      <id column="id" property="id" jdbcType="INTEGER"/>
      <result column="memberid" property="memberid" jdbcType="INTEGER"/>
      <result column="savetime" property="savetime" jdbcType="VARCHAR"/>
    </resultMap>
    
    <select id="isSignin" parameterType="HashMap" resultMap="BaseResultMap">
      select * from signin where memberid=#{memberid} and savetime=#{savetime}
    </select>
    
    <insert id="add" parameterType="com.it.entity.Signin">
      insert into signin values(null,#{memberid},#{savetime})
    </insert>
    
</mapper>

